<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiWindowingTest.IntermPage">
    <StackLayout Margin="20" VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
        <StackLayout Orientation="Horizontal" Spacing="10">
            <Label Text="Current Size: " />
            <Label Text="{Binding CurrentSize}" WidthRequest="150"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal" Spacing="10">
	  <Label Text="Screen Size: " />
	  <Label Text="{Binding ScreenSize}" WidthRequest="150"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal" Spacing="10">
	  <Label Text="Size Ratio: " />
	  <Label Text="{Binding ScreenCurrentRatio}" WidthRequest="150"/>
        </StackLayout>

        <Button Text="Go to TabPage" Command="{Binding NavigateToTabPageCommand}" />
    </StackLayout>
</ContentPage>